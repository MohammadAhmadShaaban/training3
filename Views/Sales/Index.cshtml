@model IEnumerable<WebApplication31.Models.Sale>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categotry.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categotry.CategorySalePrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categotry.CategoryName)
            </td>
            <td>
                @(item.Categotry.CategorySalePrice * item.Quantity )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SalesID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SalesID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SalesID })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("profit", "profit")
